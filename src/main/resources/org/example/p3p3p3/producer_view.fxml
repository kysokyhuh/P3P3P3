<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml" spacing="10" style="-fx-padding: 20;"
      fx:controller="org.example.p3p3p3.ProducerController">
    <TextField fx:id="serverIPField" promptText="Server IP (e.g., 127.0.0.1)"/>
    <TextField fx:id="portField" promptText="Server Port (e.g., 12345)"/>
    <TextField fx:id="folderField" promptText="File/Folder Path"/>
    <Button text="Choose File"/>
    <Button text="Start Producer" onAction="#handleStartProducer"/>
    <TextArea fx:id="logArea" prefHeight="200" editable="false"/>
</VBox>
